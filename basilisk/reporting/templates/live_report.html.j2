          <div style="font-size:10px;padding:2px 0;">
            <span style="display:inline-block;padding:0 4px;border-radius:2px;font-size:8px;font-weight:700;{% if form.method|default('GET') == 'POST' %}background:rgba(255,43,94,0.15);color:var(--red);{% else %}background:rgba(0,229,255,0.1);color:var(--cyan);{% endif %}">{{ form.method|default('GET') }}</span>
            <span style="color:var(--text);">{{ form.action|default('?')|truncate(40) }}</span>
            {% if form.has_csrf is defined and not form.has_csrf and form.method|default('GET') == 'POST' %}<span style="color:var(--red);font-weight:700;font-size:8px;margin-left:3px;">NO CSRF</span>{% endif %}
            {% if form.has_password %}<span style="color:var(--orange);font-size:8px;margin-left:3px;">PASS</span>{% endif %}
            {% if form.inputs %}<span style="color:var(--text-muted);font-size:8px;margin-left:3px;">{{ form.inputs|length }}f</span>{% endif %}
          </div>
          {% endfor %}
          {% if info.forms|length > 10 %}<div style="font-size:9px;color:var(--text-muted);">...+{{ info.forms|length - 10 }} more</div>{% endif %}
          {% endif %}

          {% if info.internal_ips %}
          <div style="margin-top:8px;font-size:9px;color:var(--red);font-weight:600;text-transform:uppercase;">Internal IPs Leaked</div>
          <div style="display:flex;flex-wrap:wrap;gap:3px;margin-top:2px;">
            {% for ip in info.internal_ips[:10] %}
            <span style="background:rgba(255,43,94,0.1);border:1px solid rgba(255,43,94,0.2);border-radius:2px;padding:1px 4px;font-size:9px;color:var(--red);">{{ ip }}</span>
            {% endfor %}
          </div>
          {% endif %}

          {% if info.dns_records %}
          <div style="margin-top:8px;font-size:9px;color:var(--cyan);font-weight:600;text-transform:uppercase;">DNS Records</div>
          <table>
            <tr><th>Type</th><th>Value</th></tr>
            {% for r in info.dns_records[:10] %}
            <tr><td style="color:var(--cyan);">{{ r.type }}</td><td>{{ r.value }}</td></tr>
            {% endfor %}
          </table>
          {% endif %}

          {# Per-host plugin breakdown #}
          {% if plugin_matrix and plugin_matrix.cells.get(host) %}
          {% set host_plugins = plugin_matrix.cells[host] %}
          <details style="margin-top:8px;">
            <summary style="font-size:9px;color:var(--text-muted);font-weight:600;text-transform:uppercase;cursor:pointer;list-style:none;">
