            <div>
              <div style="font-size:18px;font-weight:700;color:{% if risk_label == 'CRITICAL' %}var(--red){% elif risk_label == 'HIGH' %}var(--orange){% elif risk_label == 'MEDIUM' %}var(--yellow){% else %}var(--green){% endif %}">{{ risk_label }}</div>
