          {% if count > 0 %}
          <div style="display:flex;align-items:center;gap:6px;margin-bottom:4px;">
            <span style="width:55px;font-size:9px;color:var({{ color }});font-weight:600;">{{ name }}</span>
            <span style="font-size:11px;color:var({{ color }});font-weight:700;width:25px;text-align:right;">{{ count }}</span>
            <div style="flex:1;height:6px;background:rgba(255,255,255,0.05);border-radius:3px;overflow:hidden;">
              <div style="height:100%;width:{{ (count / [total, 1]|max * 100)|round|int }}%;background:var({{ color }});border-radius:3px;"></div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
        </div>
      </div>

      {# Top findings #}
      {% if top_findings %}
      <div style="background:var(--bg-card);border:1px solid var(--border);border-radius:6px;padding:12px;margin-bottom:12px;">
        <div style="font-size:9px;color:var(--text-muted);text-transform:uppercase;font-weight:600;margin-bottom:8px;">Priority Targets — Top {{ top_findings|length }}</div>
        {% for f in top_findings %}
        <div class="top-finding">
          <span class="badge {{ f.severity|lower }}" style="font-size:8px;">{{ f.severity[:4] }}</span>
          <span style="flex:1;color:var(--text-bright);">{{ f.title }}</span>
          {% if f.is_aggregated %}<span class="affects-badge">{{ f.count }} hosts</span>{% else %}<span style="font-size:9px;color:var(--text-muted);">{{ f.target }}</span>{% endif %}
        </div>
        {% endfor %}
      </div>
      {% endif %}

      {# Threat Radar #}
      {% if radar_points %}
      <div style="background:var(--bg-card);border:1px solid var(--border);border-radius:6px;padding:12px;margin-bottom:12px;">
        <div style="font-size:9px;color:var(--text-muted);text-transform:uppercase;font-weight:600;margin-bottom:8px;">Threat Radar</div>
        <div class="radar-wrap">
          <svg viewBox="0 0 280 280" style="width:220px;height:220px;">
            <circle cx="140" cy="140" r="110" fill="none" stroke="rgba(255,255,255,0.04)" stroke-width="1"/>
            <circle cx="140" cy="140" r="73" fill="none" stroke="rgba(255,255,255,0.03)" stroke-width="1"/>
            <circle cx="140" cy="140" r="37" fill="none" stroke="rgba(255,255,255,0.02)" stroke-width="1"/>
            {% for pt in radar_points %}
            <line x1="140" y1="140" x2="{{ pt.ax }}" y2="{{ pt.ay }}" stroke="rgba(255,255,255,0.06)" stroke-width="1"/>
            {% endfor %}
            <polygon points="{% for pt in radar_points %}{{ pt.dx }},{{ pt.dy }}{% if not loop.last %} {% endif %}{% endfor %}" fill="rgba(0,255,106,0.1)" stroke="var(--green)" stroke-width="1.5"/>
            {% for pt in radar_points %}
            <circle cx="{{ pt.dx }}" cy="{{ pt.dy }}" r="3" fill="var(--green)"/>
            <text x="{{ pt.lx }}" y="{{ pt.ly }}" fill="var(--text-muted)" font-size="8" text-anchor="middle" dominant-baseline="middle">{{ pt.cat }}</text>
            {% endfor %}
          </svg>
          <div class="radar-legend">
            {% set max_cat = radar_points|map(attribute='val')|max if radar_points else 1 %}
            {% set max_cat = max_cat if max_cat > 0 else 1 %}
            {% for pt in radar_points %}
            <div class="radar-legend-row">
              <span class="cat-name">{{ pt.cat }}</span>
              <span class="cat-val">{{ pt.val }}</span>
              <div class="cat-bar"><div class="cat-bar-fill" style="width:{{ (pt.val / max_cat * 100)|round|int }}%"></div></div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
      {% endif %}

      {# Exploit Chains #}
      {% if exploit_chains %}
      <div style="background:var(--bg-card);border:1px solid var(--border);border-radius:6px;padding:12px;margin-bottom:12px;">
        <div style="font-size:9px;color:var(--red);text-transform:uppercase;font-weight:600;margin-bottom:8px;">Critical Path — Exploit Chains ({{ exploit_chains|length }})</div>
        {% for chain in exploit_chains %}
        <div class="chain-card">
          <div class="chain-header">
            <span class="chain-name">{{ chain.name }}</span>
            <span class="chain-risk {{ chain.risk }}">{{ chain.risk }}</span>
          </div>
          <div class="chain-steps">
            {% for step in chain.steps %}
            <div class="chain-step">
              <div class="step-label">{{ step.label }}</div>
              {% if step.count > 0 %}<div class="step-count">{{ step.count }}</div>{% endif %}
              <div class="step-detail" title="{{ step.detail }}">{{ step.detail }}</div>
            </div>
            {% endfor %}
          </div>
        </div>
        {% endfor %}
      </div>
      {% endif %}

      {# Kill Chain Progress #}
      {% if phases %}
      <div style="background:var(--bg-card);border:1px solid var(--border);border-radius:6px;padding:12px;">
        <div style="font-size:9px;color:var(--text-muted);text-transform:uppercase;font-weight:600;margin-bottom:8px;">Kill Chain Progress</div>
        {% for phase in phases %}
        <div style="display:flex;align-items:center;gap:8px;margin-bottom:4px;">
          <span style="width:60px;font-size:10px;color:{% if phase.status == 'completed' %}var(--green){% elif phase.status == 'running' %}var(--cyan){% else %}var(--text-muted){% endif %};font-weight:600;">{{ phase.name }}</span>
          <div style="flex:1;height:6px;background:rgba(255,255,255,0.05);border-radius:3px;overflow:hidden;">
            <div style="height:100%;width:{{ phase.pct }}%;background:{% if phase.status == 'completed' %}var(--green){% elif phase.status == 'running' %}var(--cyan){% else %}var(--text-muted){% endif %};border-radius:3px;transition:width 0.5s;"></div>
          </div>
          <span style="font-size:9px;color:var(--text-muted);">{{ phase.completed }}/{{ phase.total }} ({{ phase.elapsed }}s)</span>
        </div>
        {% endfor %}
      </div>
      {% endif %}
    </div>

    <!-- ═══ Tab: Findings ═══ -->
    <div class="tab-content active" id="tab-findings">
      <div class="filters-row" style="flex-wrap:wrap;">
        <div class="view-toggle">
          <button class="active" onclick="switchView('aggregated',this)">Aggregated{% if aggregated_findings %} ({{ aggregated_findings|length }}){% endif %}</button>
          <button onclick="switchView('all',this)">All ({{ findings|length }})</button>
        </div>
        <button class="filter-chip active sc" data-sev="CRITICAL" onclick="toggleFilter(this)">Critical {{ c }}</button>
        <button class="filter-chip active sh" data-sev="HIGH" onclick="toggleFilter(this)">High {{ h }}</button>
        <button class="filter-chip active sm" data-sev="MEDIUM" onclick="toggleFilter(this)">Medium {{ m }}</button>
        <button class="filter-chip active sl" data-sev="LOW" onclick="toggleFilter(this)">Low {{ l }}</button>
        <button class="filter-chip si" data-sev="INFO" onclick="toggleFilter(this)">Info {{ i }}</button>
        <input class="tree-search" type="text" placeholder="Filter..." oninput="applyFilters()" id="findingSearch" style="width:120px;">
        {% if noise_count %}<span style="font-size:8px;color:var(--text-muted);">{{ noise_count }} noise hidden</span>{% endif %}
      </div>

      {# Aggregated view (default) #}
      <div id="aggregated-container">
      {% for sev in ['CRITICAL', 'HIGH', 'MEDIUM', 'LOW', 'INFO'] %}
      {% set sev_findings = aggregated_findings | selectattr('severity', 'equalto', sev) | list if aggregated_findings else [] %}
      {% if sev_findings %}
      <div class="finding-group" data-group-key="{{ sev }}" id="agg-{{ sev }}">
        <div style="font-size:12px;font-weight:700;color:{% if sev == 'CRITICAL' %}var(--red){% elif sev == 'HIGH' %}var(--orange){% elif sev == 'MEDIUM' %}var(--yellow){% elif sev == 'LOW' %}var(--green){% else %}var(--blue){% endif %};margin:10px 0 6px;display:flex;align-items:center;gap:4px;">
          {{ sev }} <span style="color:var(--text-muted);font-weight:400;font-size:10px;">({{ sev_findings|length }})</span>
        </div>
        {% for f in sev_findings %}
        <details class="finding-card" data-severity="{{ f.severity }}" data-search="{{ f.title|lower }} {{ (f.description or '')|lower }} {{ (f.evidence or '')|lower }} {{ f.target|lower }} {{ f.plugin|lower }}">
          <summary>
            <span class="badge {{ f.severity|lower }}">{{ f.severity[:4] }}</span>
            <span class="finding-title" title="{{ f.title }}">{{ f.title }}</span>
            {% if f.is_aggregated and f.affected_targets|length > 1 %}<span class="affects-badge">{{ f.affected_targets|length }} hosts</span>{% else %}<span class="finding-target">{{ f.target }}</span>{% endif %}
          </summary>
          <div class="finding-body">
            {% if f.description %}<div style="color:var(--text-muted);margin-bottom:6px;">{{ f.description }}</div>{% endif %}
            {% if f.evidence %}<div class="evidence"><span class="prompt">$ </span>{{ f.evidence }}</div>{% endif %}
            {% if f.remediation %}<div class="remediation">{{ f.remediation }}</div>{% endif %}
            <div style="font-size:9px;color:var(--cyan);margin-top:4px;">
              <span style="color:var(--text-muted);">Plugin:</span> {{ f.plugin }}
              <span style="color:var(--text-muted);margin-left:6px;">Target:</span> {{ f.target }}
            </div>
            {% if f.tags %}<div class="finding-tags">{% for tag in f.tags %}<span class="tag">{{ tag }}</span>{% endfor %}</div>{% endif %}
            {% if f.is_aggregated and f.affected_targets and f.affected_targets|length > 1 %}
            <details style="margin-top:6px;">
              <summary style="font-size:9px;color:var(--text-muted);cursor:pointer;">All affected hosts ({{ f.affected_targets|length }})</summary>
              <div style="font-size:9px;padding:4px 0;">{% for t in f.affected_targets %}<span style="color:var(--cyan);">{{ t }}</span>{% if not loop.last %}, {% endif %}{% endfor %}</div>
            </details>
            {% endif %}
          </div>
        </details>
        {% endfor %}
      </div>
      {% endif %}
      {% endfor %}
      </div>

      {# All findings view (hidden) #}
      <div id="findings-container" style="display:none">
      {% for sev in ['CRITICAL', 'HIGH', 'MEDIUM', 'LOW', 'INFO'] %}
      {% set sev_findings = findings | selectattr('severity', 'equalto', sev) | list %}
      {% if sev_findings %}
      <div class="finding-group" data-group-key="{{ sev }}" id="sev-{{ sev }}">
        <div style="font-size:12px;font-weight:700;color:{% if sev == 'CRITICAL' %}var(--red){% elif sev == 'HIGH' %}var(--orange){% elif sev == 'MEDIUM' %}var(--yellow){% elif sev == 'LOW' %}var(--green){% else %}var(--blue){% endif %};margin:10px 0 6px;display:flex;align-items:center;gap:4px;">
          {{ sev }} <span style="color:var(--text-muted);font-weight:400;font-size:10px;">({{ sev_findings|length }})</span>
        </div>
        {% for f in sev_findings %}
        <details class="finding-card" data-severity="{{ f.severity }}" data-search="{{ f.title|lower }} {{ (f.description or '')|lower }} {{ (f.evidence or '')|lower }} {{ f.target|lower }} {{ f.plugin|lower }}">
          <summary>
            <span class="badge {{ f.severity|lower }}">{{ f.severity[:4] }}</span>
            <span class="finding-title" title="{{ f.title }}">{{ f.title }}</span>
            <span class="finding-target">{{ f.target }}</span>
          </summary>
          <div class="finding-body">
            {% if f.description %}<div style="color:var(--text-muted);margin-bottom:6px;">{{ f.description }}</div>{% endif %}
            {% if f.evidence %}<div class="evidence"><span class="prompt">$ </span>{{ f.evidence }}</div>{% endif %}
            {% if f.remediation %}<div class="remediation">{{ f.remediation }}</div>{% endif %}
            <div style="font-size:9px;color:var(--cyan);margin-top:4px;">
              <span style="color:var(--text-muted);">Plugin:</span> {{ f.plugin }}
            </div>
            {% if f.tags %}<div class="finding-tags">{% for tag in f.tags %}<span class="tag">{{ tag }}</span>{% endfor %}</div>{% endif %}
          </div>
        </details>
        {% endfor %}
      </div>
      {% endif %}
      {% endfor %}
      </div>

      {% if not findings %}
      <div style="padding:30px;text-align:center;color:var(--text-muted);font-size:12px;">
        {% if is_running %}Scanning in progress... findings will appear here{% else %}No actionable findings{% endif %}
      </div>
      {% endif %}
    </div>

    <!-- ═══ Tab: Attack Surface ═══ -->
    <div class="tab-content" id="tab-surface">
      {% if attack_surface and attack_surface.hosts %}
      {% for host, info in attack_surface.hosts.items() %}
      {% if info.ports or info.services or info.tech or info.paths or info.admin_panels or info.exposed_files or info.api_endpoints or info.forms %}
      <details class="section-card" open>
        <summary>
          <span class="arrow">&#9654;</span>
          <span style="color:var(--green);font-weight:600;">{{ host }}</span>
          {% if info.ports %}<span style="font-size:9px;color:var(--text-muted);">{{ info.ports|length }} ports</span>{% endif %}
          {% if info.paths %}<span style="font-size:9px;color:var(--text-muted);">{{ info.paths|length }} paths</span>{% endif %}
        </summary>
        <div class="section-body">
          {% if info.tech or info.cms %}
          <div class="tech-chips" style="padding:6px 0;">
